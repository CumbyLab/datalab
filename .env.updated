VUE_APP_API_URL=http://localhost:5001
VUE_APP_GIT_VERSION=1.0.0
VUE_APP_LOGO_URL=/static/logo.png
VUE_APP_HOMEPAGE_URL=http://localhost:8081
VUE_APP_EDITABLE_INVENTORY=true
VUE_APP_WEBSITE_TITLE=My Datalab
VUE_APP_QR_CODE_RESOLVER_URL=http://localhost:5001/api/qr-code
VUE_APP_AUTOMATICALLY_GENERATE_ID_DEFAULT=true
SETUPTOOLS_SCM_PRETEND_VERSION=0.1.0

# Authentication Configuration
PYDATALAB_TESTING=false
PYDATALAB_IDENTIFIER_PREFIX=mydatalab
PYDATALAB_APP_URL=http://localhost:8081

# GitHub Authentication
PYDATALAB_GITHUB_CLIENT_ID=your_github_client_id
PYDATALAB_GITHUB_CLIENT_SECRET=your_github_client_secret
PYDATALAB_GITHUB_AUTO_ACTIVATE_ACCOUNTS=true
# Optional: Restrict to specific GitHub organizations
# PYDATALAB_GITHUB_ORG_ALLOW_LIST=["your-org-name"]

# Email Authentication
PYDATALAB_EMAIL_AUTH_SMTP_SETTINGS__MAIL_SERVER=smtp.example.com
PYDATALAB_EMAIL_AUTH_SMTP_SETTINGS__MAIL_PORT=587
PYDATALAB_EMAIL_AUTH_SMTP_SETTINGS__MAIL_USERNAME=your_username
PYDATALAB_MAIL_PASSWORD=your_password
PYDATALAB_EMAIL_AUTH_SMTP_SETTINGS__MAIL_USE_TLS=true
PYDATALAB_EMAIL_AUTH_SMTP_SETTINGS__MAIL_DEFAULT_SENDER=no-reply@example.com
PYDATALAB_EMAIL_AUTO_ACTIVATE_ACCOUNTS=false
# Optional: Restrict to specific email domains
# PYDATALAB_EMAIL_DOMAIN_ALLOW_LIST=["yourdomain.com"]

# Deployment Metadata
PYDATALAB_DEPLOYMENT_METADATA__MAINTAINER__DISPLAY_NAME=Your Name
PYDATALAB_DEPLOYMENT_METADATA__MAINTAINER__CONTACT_EMAIL=your.email@example.com
PYDATALAB_DEPLOYMENT_METADATA__HOMEPAGE=https://yourdomain.com
PYDATALAB_DEPLOYMENT_METADATA__ISSUE_TRACKER=https://github.com/yourusername/datalab/issues
PYDATALAB_DEPLOYMENT_METADATA__SOURCE_REPOSITORY=https://github.com/yourusername/datalab

# Optional: ORCID Authentication
# PYDATALAB_ORCID_CLIENT_ID=your_orcid_client_id
# PYDATALAB_ORCID_CLIENT_SECRET=your_orcid_client_secret
# PYDATALAB_ORCID_AUTO_ACTIVATE_ACCOUNTS=false

# Security
PYDATALAB_SECRET_KEY=generate_a_secure_random_string_here

# Backup Configuration
# Update paths if needed
# PYDATALAB_BACKUP_STRATEGIES__DAILY_SNAPSHOTS__LOCATION=/data/backups/daily-snapshots
# PYDATALAB_BACKUP_STRATEGIES__WEEKLY_SNAPSHOTS__LOCATION=/data/backups/weekly-snapshots
# PYDATALAB_BACKUP_STRATEGIES__QUARTERLY_SNAPSHOTS__LOCATION=/data/backups/quarterly-snapshots
